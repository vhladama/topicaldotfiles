[alias]
  amend = commit --amend
  br = branch
  ci = commit
  cim = commit -m
  co = checkout
  df = diff --word-diff=color
  g = grep -I
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr - %cn)%Creset' --abbrev-commit --date=relative
  mend = commit --amend -C HEAD
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  st = status
  sub = submodule update
  unstage = reset HEAD

[apply]
  whitespace = fix

[branch]
  autosetupmerge = true
  autosetuprebase = always

[core]
  autocrlf = input
  editor=vim -c 'startinsert'
  excludesfile = ~/.gitignore_global
  filemode = false
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
  ; whitespace = trailing-space,space-before-tab

[color]
  ui = auto
  status = auto
;   branch = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

; [color "diff"]
;   meta = yellow

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[diff]
  mnemonicprefix = true

[merge]
  log = true
  ; stat = true

[pager]
  diff = less -r
  log = less
  show = less -r

[push]
  default = tracking

[rerere]
  enabled = 1

[branch "master"]
  remote = origin
  merge = refs/heads/master

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"

[include]
  ; Store the user block in this separate file, excluded from version control.
  path = .gitconfig.user
  ; file should contain a block like this:
  ; [user]
  ;   name = Adam Alboyadjian
  ;   email = adam@vistahigherlearning.com
